<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../partials/head %>
  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">My Page <%= user %></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Profile</a></li>
            <li><a href="#">Logout</a></li>
          </ul>
          <form class="navbar-form navbar-right">
            <input type="text" class="form-control" placeholder="Search...">
          </form>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li><a href="#">My Events<span class="sr-only">(current)</span></a></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><a href="">My Pets</a></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li><a href="/events/new">Create Event</a></li>
          </ul>
          <ul class="nav nav-sidebar">
            <li class="active"><a href="">All Events</a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header">My Events</h1>

          <div class="row placeholders">
          <% for (var i = 0; i < allEvents.length; i++){ %>

            <div class="col-xs-6 col-sm-3 placeholder">
              <img src="<%=events[i].img_url%>" width="200" height="200" alt="Generic placeholder thumbnail">
              <h4><%= allEvents[i].name%></h4>
              <span class="text-muted">Date: <%= allEvents[i].date%></span><br>
              <span class="text-muted">Time: <%= allEvents[i].time%></span><br>
              <span class="text-muted">Location: <%= allEvents[i].location%></span><br>
              <span class="text-muted">Description: <%= allEvents[i].description%></span><br>
            </div>

            <% } %>
          </div>

          </div>
        </div>
      </div>
    </div>

    <%- include ../partials/footer %>
  </body>
</html>
